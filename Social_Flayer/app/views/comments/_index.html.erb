<% if @comments!=nil %>
<h4> Commenti: </h4>
<% @comments.each do |comment| %>
  <div id='comment<%=comment.id%>'>

    utente: <%=User.find(comment.user_id).username%> <br />
    dice:<%= comment.content %> <br/>
    <%= link_to 'edit', edit_store_comment_path(comment.store_id,comment.id), remote: true %><br/>
    <%= link_to 'destroy', store_comment_path(comment.store_id,comment.id), data: { confirm: "Are you sure?" }, method: :delete ,remote: true%>

    <div id='reply<%=comment.id%>' >
      <%= link_to 'mostra risposte', replyIndex_store_comment_path(params[:id], comment.id),remote: true%>
    </div>
  </div>
<%end%>

<% end %>
