<%= form_for (comment), url: path, remote: true do |f| %>
  <% if flash[:comment]%>
    <ul>
    <% flash[:commetn].each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>


  <div class="field">
    <%= params[:id]%> <%= params[:store_id]%>
    <%= f.label :content %><br />
    <%= f.text_area :content, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>
