<%= form_for respond, url: path, remote: true do |f| %>
  <% if respond.errors.any? %>
    <ul>
      <% respond.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
      <% end %>
    </ul>
    <% end %>

  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content, autofocus: true %>
  </div>

  <div class="actions">
    <%= f.submit "invia",class: "waves-effect waves-light btn"  %>
  </div>
<% end %>
