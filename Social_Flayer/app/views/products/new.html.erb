<h1>Products#new</h1>

<%= form_for @product, url: store_products_path(params[:store_id]) do |f| %>
  <% if @product.errors.any? %>
    <ul>
    <% @product.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
  <% end %>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name, autofocus: true %>
  </div>

  <div class="field">
    <%= f.label :price %><br />
    <%= f.text_field :price  %>
  </div>

  <div class="field">
    <%= f.label :duration_h %><br />
    <%= f.text_field :duration_h   %>
  </div>

  <div class="field">
    <%= f.label :type %> <br/>
    <%= f.text_field :type %>
  </div>

  <div class="field">
    <%= f.label :feature %><br />
    <%= f.text_area :feature   %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>

<% end %>
