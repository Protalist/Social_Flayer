

<%= @cu.id%> <br/>
<%= @cu.email%> <br/>
<%= @cu.username%> <br/>
<%= @cu.surname%> <br/>
<%= @cu.name %> <br/>

<p>

  <% if @cu.image.thumb.url!=nil %>
  <strong>Immagine profilo:</strong>
  <%= image_tag @cu.image.propic.url %>
  <% end %>
</p>

<div id='followandi'>
   <ul>
     <% @followings.each do |followati| %>

		<li >negozio seguito  ------    <%=Store.find(followati.store_id).name %> </li>
	<%end%>
   </ul>
</div>

<div style="width: 700px; height: 500px; overflow-y: scroll;">
  <%@list.each do |l|%>

    <%if l.class == Comment%>
      <%= render "comments/comment", comment: l %>
    <%elsif l.class == Store%>
      <%= render "stores/store", store: l %>
    <%elsif l.class == Respond%>
      <%= render "responds/respond", respond: l%>
    <% elsif l.class == Product%>
      <%= render "products/product", product: l%>
    <%elsif l.class == FollowStore %>
      l'utente <%= link_to ""+User.find(l.user_id).name, user_path(l.user_id) %> segue il negozio <%=link_to ""+Store.find(l.store_id).name, store_path(l.store_id)%>
    <%elsif l.class == ActsAsVotable::Vote%>
      l'utente <%= User.find(l.voter_id).name%> ha votato <%=link_to ""+Store.find(l.votable_id).name, store_path(l.votable_id)%> <%= User.find(l.voter_id).voted_up_on? Store.find(l.votable_id) %>
    <%end%><br/>
    data:<%= l.updated_at %><br/>
  ____________________________________________________________<br/>
  <%end%>
</div>

<div>
  <%= form_tag users_path, method: :get do %>
     cerca amigo da followare che non paga afito :D
     <%= text_field_tag :username ,params[:username], id:"nome"  %>

     <%= submit_tag "cerca", id: "submit"%>
   <% end %>

</div>

<div>
  <%= render 'shared/search' %>
</div>

