<!DOCTYPE html>
<html>
  <head>
    <title>SocialFlayer</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet">

  </head>

    <body onload="autocomplete()">
      <% if user_signed_in? %>
      <div class="navbar-fixed">
        <nav class="nav-extended  light-green darken-2">
        <div class="nav-wrapper">
          <a href="#" class="brand-logo">Logo</a>
          <a href="#" data-activates="mobile-demo" class="button-collapse"><i class="material-icons">menu</i></a>
          <ul id="nav-mobile" class="right hide-on-med-and-down">
            <li><a href="sass.html">Sass</a></li>
            <li><a href="badges.html">Components</a></li>
            <li><a href="collapsible.html">JavaScript</a></li>
          </ul>
          <ul class="side-nav" id="mobile-demo">
            <li><a href="sass.html">Sass</a></li>
            <li><a href="badges.html">Components</a></li>
            <li><a href="collapsible.html">JavaScript</a></li>

          </ul>
        </div>
        <div class="nav-content light-green lighten-3">
          <nav>
      <form>
        <div class="input-field light-green">
          <input id="search" type="search" required>
          <label class="label-icon" for="search"><i class="material-icons">search</i></label>
          <i class="material-icons">close</i>
        </div>
      </form>

  </nav>
        </div>
      </nav>

  </div>
  <% end %>

<br><br><br><br>
<div class="container ">
    <% if flash[:notice] %>
      <div class="notice"><%= flash[:notice] %></div>
    <% end %>
    <% if flash[:alert] %>
      <div class="allert"><%= flash[:alert] %></div>
    <% end %>
    <% if user_signed_in? %>
      <%= render 'shared/back' %>
      <%= render 'shared/change' %>
    <% end %>
      <%= yield %>
</div>
<% if user_signed_in? %>
<footer class="page-footer teal  light-green lighten-1">
<div class="footer-copyright  light-green">
  <div class="container">


     <h5 class="header col s12 light">Logged in as <%= current_user.email%> with role: <%= current_user.roles_mask %> [<%= link_to 'Edit', edit_user_registration_path%>,<%= link_to 'Logout',  destroy_user_session_path, :method => :delete%> <% if can? :admin,User%> <%= link_to "homepage admin", admin_path%> <%end%> ]</h5>

  </div>
</div>
</footer>
<% end %>
  </body>
</html>
